#!/usr/bin/env ruby

$LOAD_PATH << File.expand_path('../../lib', __FILE__)
require 'bsmart'

catalog   = File.read ARGV.shift
web       = File.read ARGV.shift
image_dir = ARGV.shift or '.'
switch    = ARGV.shift

image_list = ImageList.new image_dir

puts Bsmart::CLI::ShouldBeOnWeb.new(catalog, web, image_list.images, switch).answer
